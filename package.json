{
  "name": "elevated-school",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "convex": "^1.31.2"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "check-types": "turbo run check-types",
    "lint": "turbo run lint",
    "format:check": "turbo run format:check",
    "format:write": "turbo run format:write",
    "dev:native": "turbo run -F native dev",
    "dev:web": "turbo run -F web dev",
    "dev:server": "turbo run -F @elevated-school/backend dev",
    "dev:setup": "turbo run -F @elevated-school/backend dev:setup"
  },
  "dependencies": {
    "@elevated-school/env": "workspace:*",
    "convex-helpers": "^0.1.111",
    "dotenv": "catalog:",
    "nuqs": "^2.8.8",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@elevated-school/config": "workspace:*",
    "turbo": "^2.6.3",
    "typescript": "catalog:"
  },
  "packageManager": "bun@1.3.3"
}
